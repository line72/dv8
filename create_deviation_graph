##################################################
#
# This is a simple script to read from the database
#  `poller.db` generated by the `start_poller`
#  script.
# This generates a pdf visualization showing the
#  deviation (on time performance) of each route.
#
##################################################

import sys
import dv8.Plotter

if __name__ == '__main__':
    if '-h' in sys.argv or '--help' in sys.argv:
        print('Usage: %s [start_time end_time]' % sys.argv[0])
        print('')
        print('start_time and end_time are formatted as: YYYYMMDD (20170523)')
        sys.exit(1)

    start_time = end_time = None
    
    try: start_time = sys.argv[1]
    except IndexError: pass
    try: end_time = sys.argv[2]
    except IndexError: pass
        
    plotter = dv8.Plotter.Plotter(start_time, end_time)
    plotter.go()

