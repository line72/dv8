##################################################
#
# This is a simple script to read from the database
#  `poller.db` generated by the `start_poller`
#  script.
# This generates a pdf visualization based on the
#  graph type for each route.
#
##################################################

import sys

import dv8.DeviationPlotter
import dv8.OnBoardPlotter

if __name__ == '__main__':
    def usage():
        print('Usage: %s GRAPH [start_time end_time]' % sys.argv[0])
        print('')
        print('  GRAPH:')
        print('    deviation \tOn Time Performance based on time deviation')
        print('    onboard   \tRiders actively On the bus')
        print('')
        print('  start_time and end_time are formatted as: YYYYMMDD (20170523)')
        sys.exit(1)

    
    if '-h' in sys.argv or '--help' in sys.argv or len(sys.argv) < 2:
        usage()

    graph_type = sys.argv[1]
    
    start_time = None
    end_time = None
    
    try: start_time = sys.argv[2]
    except IndexError: pass
    try: end_time = sys.argv[3]
    except IndexError: pass


    if graph_type.strip() == 'deviation':
        plotter = dv8.DeviationPlotter.DeviationPlotter(start_time, end_time)
        plotter.go()
    elif graph_type.strip() == 'onboard':
        plotter = dv8.OnBoardPlotter.OnBoardPlotter(start_time, end_time)
        plotter.go()
    else:
        print('Invalid GRAPH type: %s' % graph_type);
        usage()



